<UserControl x:Class="HCWpfFramework.Controls.DockableContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource DockingPanelContentBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource DockingPanelHeaderBrush}" 
                    Padding="8,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="{Binding WindowData.Title, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <!-- Float Button -->
                        <Button Name="FloatButton" 
                                Content="?" 
                                Width="20" Height="20" 
                                Margin="2,0"
                                ToolTip="Float Window"
                                Click="FloatButton_Click"
                                Style="{StaticResource ToolbarButtonStyle}"/>
                        
                        <!-- Close Button -->
                        <Button Name="CloseButton" 
                                Content="?" 
                                Width="20" Height="20" 
                                Margin="2,0"
                                ToolTip="Close Window"
                                Click="CloseButton_Click"
                                Style="{StaticResource ToolbarButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          Padding="8" 
                          Background="{DynamicResource DockingPanelContentBrush}"
                          Style="{StaticResource ThemedScrollViewerStyle}">
                <TextBlock Text="{Binding WindowData.Description, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           TextWrapping="Wrap"
                           FontFamily="Segoe UI"
                           FontSize="12"
                           Foreground="{DynamicResource PrimaryTextBrush}"
                           Style="{StaticResource ThemedTextBlockStyle}"/>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>